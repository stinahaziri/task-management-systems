using backend.Data;
using backend.Dtos.TaskEntity;
using backend.Interface;
using backend.Models.Entities;
using Microsoft.AspNetCore.Authorization;
using Microsoft.AspNetCore.Mvc;
using Microsoft.EntityFrameworkCore;
using System.Security.Claims;

namespace backend.Controllers
{
    [Route("backend/TaskEntity")]
    [ApiController]
    [Authorize]
    public class TaskEntityControllers : ControllerBase
    {
        private readonly ApplicationDbContext _context;
        private readonly ITaskE _taskRepo;

        public TaskEntityControllers(ApplicationDbContext context, ITaskE taskRepo)
        {
            _context = context;
            _taskRepo = taskRepo;
        }

        //  me i mar tasks admini per krejt edhe useri vetem per disa 
        [HttpGet]
        public async Task<IActionResult> GetALL()
        {
            var role = User.FindFirst(ClaimTypes.Role)?.Value;
            var userId = int.Parse(User.FindFirst("UserId").Value);

            IEnumerable<TaskEntity> tasks;

            if (role == "ADMIN")
            {
                tasks = await _taskRepo.GetListAsync();
            }
            else
            {
                tasks = await _context.TaskAssignments
                    .Where(ta => ta.UserId == userId)
                    .Join(_context.TaskEntity,
                        ta => ta.TaskEntityId,
                        t => t.ID,
                        (ta, t) => t)
                    .ToListAsync();
            }

            var taskDtos = tasks.Select(t => t.ToTaskEntityDto());
            return Ok(taskDtos);
        }

        // tasku prej id
        [HttpGet("{Id}")]
        public async Task<IActionResult> GetById([FromRoute] int ID)
        {
            var task = await _taskRepo.GetByIdAsync(ID);
            if (task == null) return NotFound();

            var role = User.FindFirst(ClaimTypes.Role)?.Value;
            var userId = int.Parse(User.FindFirst("UserId").Value);

            if (role != "ADMIN" && !await _context.TaskAssignments.AnyAsync(x => x.TaskEntityId == ID && x.UserId == userId))
                return Forbid();

            return Ok(task.ToTaskEntityDto());
        }

        // krijimi
        [HttpPost]
        public async Task<IActionResult> Create([FromBody] CreateTaskRequestDto taskEntityDto)
        {
            var userId = int.Parse(User.FindFirst("UserId").Value);

            var taskModel = taskEntityDto.ToTaskEntityDTO();
            taskModel.Created_By_Id = userId;

            await _taskRepo.CreateAsync(taskModel);
            return CreatedAtAction(nameof(GetById), new { id = taskModel.ID }, taskModel.ToTaskEntityDto());
        }

        // perditsimi i taskut
        [HttpPut("{id}")]
        public async Task<IActionResult> Update([FromRoute] int ID, [FromBody] UptadeTaskRequestDto updateDto)
        {
            var task = await _taskRepo.GetByIdAsync(ID);
            if (task == null) return NotFound();

            var role = User.FindFirst(ClaimTypes.Role)?.Value;
            var userId = int.Parse(User.FindFirst("UserId").Value);

            if (role != "ADMIN" && task.Created_By_Id != userId)
                return Forbid();

            var updatedTask = await _taskRepo.UpdateAsync(ID, updateDto);
            return Ok(updatedTask.ToTaskEntityDto());
        }

        // me fshi taskun dmth vetem admin
        [HttpDelete("{id}")]
        [Authorize(Roles = "ADMIN")]
        public async Task<IActionResult> Delete([FromRoute] int ID)
        {
            var task = await _taskRepo.DeleteAsync(ID);
            if (task == null) return NotFound();

            return NoContent();
        }

        // me assign task te useri dmth vetem admini e sheh
        [HttpPost("assign")]
        [Authorize(Roles = "ADMIN")]
        public async Task<IActionResult> AssignTaskToUser(int taskId, int userId)
        {
            if (await _context.TaskAssignments.AnyAsync(x => x.TaskEntityId == taskId && x.UserId == userId))
                return BadRequest("Task is already assigned to this user.");

            var assignment = new TaskAssignments
            {
                TaskEntityId = taskId,
                UserId = userId
            };

            _context.TaskAssignments.Add(assignment);
            await _context.SaveChangesAsync();
            return Ok(assignment);
        }
    }
}
